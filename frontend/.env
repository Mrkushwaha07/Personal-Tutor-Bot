# =============================================
# Personal Tutor Bot - Frontend Environment Variables
# =============================================

# API Configuration
# =================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_VERSION=v1

# Application Configuration
# =========================
REACT_APP_NAME=Personal Tutor Bot
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=AI-powered educational platform for personalized learning
REACT_APP_AUTHOR=Personal Tutor Bot Team

# Feature Flags
# =============
REACT_APP_FEATURE_AI_TUTOR=true
REACT_APP_FEATURE_CURRICULUM=true
REACT_APP_FEATURE_PROGRESS_TRACKING=true
REACT_APP_FEATURE_GAMIFICATION=false
REACT_APP_FEATURE_OFFLINE_MODE=false

# UI/UX Configuration
# ===================
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=blue
REACT_APP_SECONDARY_COLOR=indigo
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_SOUNDS=false

# Authentication & Security
# =========================
REACT_APP_TOKEN_REFRESH_INTERVAL=840000  # 14 minutes in milliseconds
REACT_APP_ENABLE_2FA=false
REACT_APP_MIN_PASSWORD_LENGTH=6

# Academic Configuration
# ======================
REACT_APP_MIN_GRADE_LEVEL=4
REACT_APP_MAX_GRADE_LEVEL=9
REACT_APP_DEFAULT_STUDY_TIME=60  # minutes
REACT_APP_MAX_DAILY_STUDY_TIME=180  # minutes

# AI Configuration
# ================
REACT_APP_AI_MODEL_NAME=GPT-4
REACT_APP_AI_MAX_QUESTIONS_PER_DAY=50
REACT_APP_AI_RESPONSE_TIMEOUT=30  # seconds

# Chat & Messaging
# ================
REACT_APP_CHAT_HISTORY_LIMIT=50
REACT_APP_MESSAGE_CHAR_LIMIT=1000
REACT_APP_ENABLE_CHAT_PERSISTENCE=true

# Progress & Analytics
# ====================
REACT_APP_PROGRESS_UPDATE_INTERVAL=30000  # 30 seconds
REACT_APP_ENABLE_REAL_TIME_ANALYTICS=true
REACT_APP_ANALYTICS_SAMPLE_RATE=1.0

# Notifications
# =============
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=false

# File Upload
# ===========
REACT_APP_MAX_FILE_SIZE=10  # MB
REACT_APP_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.txt

# Performance & Optimization
# ==========================
REACT_APP_LAZY_LOAD_ENABLED=true
REACT_APP_IMAGE_QUALITY=80
REACT_APP_CACHE_DURATION=3600000  # 1 hour in milliseconds

# Error Handling & Monitoring
# ===========================
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_LOG_LEVEL=info
REACT_APP_SENTRY_DSN=  # Leave empty if not using Sentry

# Internationalization
# ====================
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de
REACT_APP_ENABLE_RTL=false

# Accessibility
# =============
REACT_APP_ENABLE_HIGH_CONTRAST=false
REACT_APP_ENABLE_SCREEN_READER=true
REACT_APP_KEYBOARD_SHORTCUTS_ENABLED=true

# Third-Party Integrations
# ========================
REACT_APP_GOOGLE_ANALYTICS_ID=  # Leave empty if not using GA
REACT_APP_HOTJAR_ID=  # Leave empty if not using Hotjar
REACT_APP_STRIPE_PUBLISHABLE_KEY=  # For future payment features

# Development & Debugging
# =======================
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_SHOW_DEV_TOOLS=true

# Build Configuration
# ===================
REACT_APP_BUILD_TIMESTAMP=20241110
REACT_APP_BUILD_ENV=development
REACT_APP_SOURCE_MAPS=true

# PWA Configuration (Optional)
# ================
REACT_APP_PWA_ENABLED=false
REACT_APP_OFFLINE_SUPPORT=false
REACT_APP_SERVICE_WORKER_ENABLED=false